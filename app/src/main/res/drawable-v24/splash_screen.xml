<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/expocom_1"
                android:endColor="@color/expocom_2"/>
        </shape>
    </item>
    <item

        android:id="@+id/splash_expocom"
        android:gravity="center"
        android:left="0dp"
        android:right="0dp"
        android:width="150dp"
        android:height="150dp"
        >
        <bitmap
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/expocom_splash_titulo" />
    </item>

</layer-list>
